<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/darin4">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="Existing"
        android:id="@+id/existingButton"
        android:textAllCaps="false"
        android:src="@drawable/ic_existing"

        android:layout_above="@+id/cameraButton"
        android:layout_alignLeft="@+id/cameraButton"
        android:layout_alignStart="@+id/cameraButton" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_gallery"
        android:id="@+id/galleryButton"
        android:textAllCaps="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="Camera"
        android:id="@+id/cameraButton"
        android:textAllCaps="false"
        android:src="@drawable/ic_camera"
        android:layout_above="@+id/galleryButton"
        android:layout_alignLeft="@+id/galleryButton"
        android:layout_alignStart="@+id/galleryButton" />


</RelativeLayout>